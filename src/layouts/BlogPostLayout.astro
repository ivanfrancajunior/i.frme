---
import BaseLayout from './BaseLayout.astro';
import Navbar from '../components/common/Navbar.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout title={`${frontmatter.title} | Ivan França`}>
    <nav class="fixed top-0 left-0 w-full z-50 border-b border-white/10 bg-black/90 backdrop-blur-md px-6 md:px-12 py-5">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <a href="/" class="font-condensed text-3xl font-bold tracking-tighter text-white">I.FRME</a>
            <a href="/" class="font-condensed text-sm uppercase tracking-widest text-gray-400 hover:text-white border border-white/20 px-3 py-1 rounded-full">
                Voltar
            </a>
        </div>
    </nav>

    <article class="w-full max-w-4xl px-6 md:px-12 pt-32 pb-20 flex flex-col mx-auto">
        <header class="text-center mb-16 mt-10">
            <div class="flex justify-center items-center gap-4 text-xs font-sans text-gray-400 uppercase tracking-widest mb-6">
                <span>{frontmatter.category || 'Fotografia'}</span>
                <span>•</span>
                <span>{new Date(frontmatter.pubDate).toLocaleDateString('pt-BR', { day: '2-digit', month: 'short', year: 'numeric' }).toUpperCase()}</span>
            </div>
            <h1 class="font-condensed text-6xl md:text-8xl font-bold text-white uppercase leading-none mb-6">
                {frontmatter.title.split(' ').slice(0, 3).join(' ')}<br>{frontmatter.title.split(' ').slice(3).join(' ')}
            </h1>
            <p class="font-inter text-gray-400 text-lg md:text-xl max-w-2xl mx-auto font-light leading-relaxed">
                {frontmatter.description}
            </p>
        </header>

        {frontmatter.image && (
            <div class="w-full aspect-video bg-gray-800 mb-16 overflow-hidden">
                <img src={frontmatter.image}
                     class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700 ease-in-out"
                     alt={frontmatter.title}>
                <p class="text-xs text-gray-500 font-mono mt-2 text-right">FOTO: {frontmatter.camera || 'REDMI NOTE 11'} • ISO {frontmatter.iso || '100'}</p>
            </div>
        )}

        <div class="max-w-2xl mx-auto">
            <slot />
        </div>

        <footer class="border-t border-white/20 pt-12 flex flex-col md:flex-row justify-between gap-8">
            <a href="#" class="group text-left">
                <span class="text-xs font-sans text-gray-500 uppercase tracking-widest mb-1 block">ANTERIOR</span>
                <span class="font-condensed text-2xl md:text-4xl text-white group-hover:underline decoration-1 underline-offset-4">INTRODUÇÃO À CÂMERA</span>
            </a>
            <a href="#" class="group text-right">
                <span class="text-xs font-sans text-gray-500 uppercase tracking-widest mb-1 block">PRÓXIMO</span>
                <span class="font-condensed text-2xl md:text-4xl text-white group-hover:underline decoration-1 underline-offset-4">ESPAÇO NEGATIVO →</span>
            </a>
        </footer>
    </article>
</BaseLayout>
